<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Use NSFaceIDUsageDescription to define the usage description for Face ID -->
    <key>NSFaceIDUsageDescription</key>
    <string>This app requires Face ID to authenticate and provide access to secure features.</string>

    <!-- Disable App Transport Security for development -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <!-- Set NSAllowsArbitraryLoads to YES to disable ATS entirely -->
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <!-- Exception domain example for localhost if needed specifically -->
        <key>NSExceptionDomains</key>
        <dict>
            <key>localhost</key>
            <dict>
                <!-- Include to allow insecure HTTP requests -->
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <!-- Include to specify that the domain does not need to use forward secrecy -->
                <key>NSExceptionRequiresForwardSecrecy</key>
                <false/>
                <!-- Bypass all certificate checks (do not use in production) -->
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSTemporaryExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSTemporaryExceptionMinimumTLSVersion</key>
                <string>TLSv1.1</string>
            </dict>
        </dict>
    </dict>
</dict>
</plist>
